ZMK_COMBO(semi,   &kp SEMI,      RB3 RM2,     DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(rbkt,   &kp RBKT,      RT2 RM1,     DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(dqt,   &kp DQT,      RM2 RB1,     DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
/* END Diagonal combos - right hand */
/* END Right Hand */


