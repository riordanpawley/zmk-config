ZMK_COMBO(lbkt,   &kp LBKT,      LT2 LM1,     DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(sqt,   &kp SQT,      LM2 LB1,     DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
/* END Diagonal combos - left hand */
/* END Left Hand */

